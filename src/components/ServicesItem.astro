---
import { aboutData } from "@/data/data";
---

<style>
  .services {
    position: relative;
    overflow: hidden;
    padding-right: 3rem;
    align-self: center;
  }

  .slide {
    opacity: 0;
    transition: opacity 0.6s ease;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 1rem;
  }

  .slide.active {
    opacity: 1;
    position: relative;
  }

  .content {
    display: flex;
    flex-direction: column;
  }

  h3,
  p {
    color: var(--color-text);
  }

  span {
    font-size: 5rem;
    color: var(--color-primary);
  }

  .dots {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    z-index: 10;
  }

  .dot {
    width: 12px;
    height: 12px;
    background-color: var(--color-primary);
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .dot.active {
    background-color: var(--color-text);
  }

  @media screen and (min-width: 48rem) {
    .services {
      height: 300px; /* ajusta altura seg√∫n necesites */
      width: 60%;
      padding-right: 6rem;
    }
  }
</style>

<div class="services" id="services">
  {
    aboutData.map((item, index) => (
      <div class={`slide ${index === 0 ? "active" : ""}`} data-index={index}>
        <div class="number-data">
          <span>{item.id}</span>
        </div>
        <div class="content">
          <h3>{item.title}</h3>
          <p>{item.description}</p>
        </div>
      </div>
    ))
  }

  <div class="dots" id="dots">
    {
      aboutData.map((_, index) => (
        <span class={`dot ${index === 0 ? "active" : ""}`} data-index={index} />
      ))
    }
  </div>
</div>

<script>
  import { initZoomScroll } from "../scripts/ZoomScroll";

  window.addEventListener("DOMContentLoaded", () => {
    initZoomScroll();
  });
</script>
