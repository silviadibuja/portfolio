---
const {
  color = "#344293",
  mirror = false, // ← efecto espejo vertical
  withBackground = false, //
} = Astro.props;

// Combina las transformaciones:
const transformStyle = mirror
  ? "rotate(180deg) scaleY(-1)"
  : "rotate(180deg)";
---

<style>
  .custom-shape-divider-top {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 150px;
    overflow: hidden;
    z-index: 1;
    line-height: 0;
    border: none;
  }

  .custom-shape-divider-top svg {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 150px;
  }

  @media (max-width: 767px) {
    .custom-shape-divider-top {
      height: 120px;
    }
  }
</style>

<!-- ✅ Aplicamos estilo de transform directamente -->
<div class="custom-shape-divider-top" style={`transform: ${transformStyle};`}>
  <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
<svg viewBox="0 0 1200 120" preserveAspectRatio="none">
  {
    withBackground && (
      <rect width="100%" height="100%" fill="#dfdd19" />
    )
  }

  <path
    d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19
       c-82.26-17.34-168.06-16.33-250.45.39
       -57.84,11.73-114,31.07-172,41.86
       A600.21,600.21,0,0,1,0,27.35V120H1200V95.8
       C1132.19,118.92,1055.71,111.31,985.66,92.83Z"
    fill={color}
/>
</svg>

    
  </svg>
</div>

<div class="container-full">
  <div class="full-section" style={`background-color: ${color};`}></div>
</div>
