---
const {
    dual = false,
    layout = "split", // "split" o "full"
    color = "#d4dc00",
    colorLeft = "#20b2aa",
    colorRight = "#2c3ec6",
} = Astro.props;
---

<style>
    .container-full {
        width: 100vw;
        height: 100vh;
        display: flex;
        position: relative;
    }

    .container-left {
        background-color: #20b2aa;
        width: 50%;
    }

    .container-right {
        background-color: #2c3ec6;
        width: 50%;
    }

    .custom-shape-divider-top {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 150px;
        overflow: hidden;
        z-index: 10;
        transform: rotate(180deg); /* si quieres la onda hacia arriba */
    }

    .custom-shape-divider-top svg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 150px;
    }

    @media (max-width: 767px) {
        .custom-shape-divider-top {
            height: 120px;
        }
    }
</style>

<div class="custom-shape-divider-top">
    <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        {
            dual ? (
                <>
                    <path
                        d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19
                       c-82.26-17.34-168.06-16.33-250.45.39
                       -57.84,11.73-114,31.07-172,41.86
                       A600.21,600.21,0,0,1,0,27.35V120H1200V95.8
                       C1132.19,118.92,1055.71,111.31,985.66,92.83Z"
                        fill={colorLeft}
                        style="clip-path: inset(0 50% 0 0);"
                    />
                    <path
                        d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19
                       c-82.26-17.34-168.06-16.33-250.45.39
                       -57.84,11.73-114,31.07-172,41.86
                       A600.21,600.21,0,0,1,0,27.35V120H1200V95.8
                       C1132.19,118.92,1055.71,111.31,985.66,92.83Z"
                        fill={colorRight}
                        style="clip-path: inset(0 0 0 50%);"
                    />
                </>
            ) : (
                <path
                    d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19
                   c-82.26-17.34-168.06-16.33-250.45.39
                   -57.84,11.73-114,31.07-172,41.86
                   A600.21,600.21,0,0,1,0,27.35V120H1200V95.8
                   C1132.19,118.92,1055.71,111.31,985.66,92.83Z"
                    fill={color}
                />
            )
        }
    </svg>
</div>

<div class="container-full">
    {
        layout === "split" ? (
            <>
                <div
                    class="container-left"
                    style={`background-color: ${colorLeft};`}
                />
                <div
                    class="container-right"
                    style={`background-color: ${colorRight};`}
                />
            </>
        ) : (
            <div class="full-section" style={`background-color: ${color};`} />
        )
    }
</div>
