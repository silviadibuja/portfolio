---
// src/components/ProjectCard.astro
const { project } = Astro.props;
---

<style>
  /* src/styles/ProjectCard.css */
  .card {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    transition: filter 0.3s ease;
    width: 200px;
    height: 200px;
  }

  .card:hover {
    filter: contrast(1.1);
  }

  .card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  .card-media-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .card-image,
  .card-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 6px;
    transition: opacity 0.3s ease;
  }

  .card-video {
    display: none;
  }

  .card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 1rem;
    color: white;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.4s ease,
      transform 0.4s ease;
    z-index: 10;
    pointer-events: none; /* Evita bloquear eventos en hover */
  }

  .card-media-wrapper:hover .card-content,
  .card-media-wrapper:focus-within .card-content {
    opacity: 1;
    transform: translateY(0);
  }

  .card-content h3 {
    margin: 0;
    font-weight: 600;
  }

  @media screen and (min-width: 48rem) {
    .card {
      width: 300px;
      height: 400px;
    }
  }
</style>

<ul>
  <li>
    <article class="card">
      <a href={`/${project.slug}`} class="card-link">
        <div class="card-media-wrapper">
          <img
            src={project.imageStatic}
            alt={project.title}
            class="card-image hover-toggle"
            data-type="image"
          />

          <video
            src={project.video}
            class="card-video hover-toggle"
            data-type="video"
            muted
            loop
            playsinline></video>

          <div class="card-content">
            <h3>{project.title}</h3>
          </div>
        </div>
      </a>
    </article>
  </li>
</ul>

<script src="../scripts/hoverImages.js"></script>
