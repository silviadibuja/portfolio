---
import Scrolling from "@/components/Scrolling.astro";
---

<style>
    .text-container {
        text-align: center;
        position: relative;
        z-index: 10;
    }

    .dibuja-text {
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        gap: 1rem;

        span {
            pointer-events: none;
        }
    }

    .s-letter {
        font-size: clamp(18rem, -5.765rem + 7.647vw, 26rem);
        transition: all 0.3s ease;
    }

    .dibuja-word {
        font-size: clamp(10rem, -5.765rem + 7.647vw, 26rem);
        transition: all 0.3s ease;
    }

    .dibuja-text.hovered .s-letter {
        font-size: clamp(24rem, -5.765rem + 21.647vw, 36rem);
        color: #ff6f61 !important;
    }

    .dibuja-text.hovered .dibuja-word {
        font-size: clamp(12rem, -1.647rem + 8.471vw, 26rem);
        color: #007bff;
    }
</style>

<section class="section s1">
    <div class="text-container">
        <div class="dibuja-text">
            <span class="s-letter">S</span>
            <span class="dibuja-word">dibuja</span>
        </div>
    </div>
    <Scrolling direction="down" />
</section>
