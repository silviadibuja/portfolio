---
import Scrolling from "@/components/Scrolling.astro";
import Instagram from "@/assets/instagram.svg";
import Linkedin from "@/assets/linkedin.svg";

import CustomHero from "@/components/CustomHero.astro";
---

<style>
    .loading-overlay {
        position: absolute;
        inset: 0;
        background-color: var(--color-primary);
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        pointer-events: none;
    }
    .loading-line {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: var(--color-secondary);
        transform: scaleX(0);
        transform-origin: center;
        will-change: transform;
        z-index: 100;
        pointer-events: none;
    }
    .text-container {
        text-align: center;
        position: relative;
        z-index: 10;
    }

    .dibuja-text {
        .dibuja-text {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            overflow: hidden;
            clip-path: inset(0% 0% 100% 0%);
        }

        span {
            pointer-events: none;
        }
    }

    .s-letter {
        font-size: clamp(6rem, 4rem + 8vw, 24rem);
        transition: all 0.3s ease;
        font-family: Sentient;
        color: var(--color-secondary);
    }

    .dibuja-word {
        font-size: clamp(2rem, 2rem + 5vw, 10rem);
        transition: all 0.3s ease;
        font-family: Bricolage;
        color: var(--color-white-primary);
    }

    .dibuja-text.hovered .s-letter {
        font-size: clamp(10rem, 6rem + 10vw, 36rem);
        color: var(--color-white-primary);
    }

    .dibuja-text.hovered .dibuja-word {
        font-size: clamp(4rem, 3rem + 6vw, 18rem);
        color: var(--color-secondary);
    }

    .banner-link {
        position: absolute;
        display: grid;
        right: 1rem;
        justify-items: center;
        row-gap: 0.5rem;
    }

    .banner-link:before,
    .banner-link:after {
        content: "";
        position: absolute;
        width: 12rem;
        height: 2px;
        transform: rotate(90deg);
        background: var(--color-secondary);
    }

    .banner-link:before {
        top: -7rem;
    }

    .banner-link:after {
        bottom: -7rem;
    }

    .banner-link svg {
        width: 2rem;
        height: 2rem;
        cursor: pointer;
    }
    @media (width > 600px) {
        .banner-link {
            right: 3.5rem;
        }
    }
</style>

<section class="section s1">
    <div class="loading-overlay">
        <div class="loading-line"></div>
    </div>
    <CustomHero />
    <div class="text-container">
        <div class="dibuja-text">
            <span class="s-letter">S</span>
            <span class="dibuja-word">dibuja</span>
        </div>
    </div>
    <div class="banner-link">
        <a
            href="https://www.instagram.com/esedibuja/"
            target="_blank"
            rel="noreferrer noopener"
            title="Instagram"
        >
            <Instagram />
        </a>

        <a
            href="https://www.linkedin.com/in/silviaromerohiguera/"
            target="_blank"
            rel="noreferrer noopener"
            title="Linkedin"
        >
            <Linkedin />
        </a>
    </div>
    <Scrolling direction="down" />
</section>
<script src="../scripts/customHero.js"></script>
