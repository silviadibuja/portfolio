---
import Scrolling from "@/components/Scrolling.astro";
import BackgroundWaves from "./BackgroundWaves.astro";

---

<style>
  .s2 .content {
    display: flex;
    flex-direction: row; /* Mobile first: columna */
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    overflow-y: auto;
    /* gap: clamp(1rem, 2vw, 3rem); */
    gap: 1rem;
    z-index: 20;
  }

  .wrapper {
    width: 280px;
    height: 180px;
    position: relative;
    display: flex;
    flex-direction: column;
    transition: all 200ms ease-in-out;

    .image-wrapper {
      width: 100%;
      height: 100%;
      overflow: hidden;
      border-radius: 5px;
      cursor: none;
      transition: all 200ms ease-in-out;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: all 200ms ease-in-out;
      }

      .book-design-image {
        object-position: center;
      }
    }

    .header-wrapper {
      display: flex;
      flex-direction: column;
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      justify-content: center;
      align-items: center;
      transition: all 200ms ease-in-out;
      background-color: var(--color-secondary);

      h3 {
        color: #fff;
        font-size: 1.5rem;
        font-family: Oswald, sans-serif;
        text-transform: uppercase;
        margin: 0.5rem 0;
        transition: all 200ms ease-in-out;
      }
    }
  }

  @media (min-width: 768px) {
    .s2 .content {
      justify-content: center;
      overflow: hidden;
      gap: calc(1rem + 1vw);
    }

    .wrapper {
      width: 350px;
      height: 350px;

      .image-wrapper {
        width: 450px;
        height: 180px;

        img {
          width: 450px;
          height: 180px;
        }
      }

      .header-wrapper {
        overflow: hidden;
        h3 {
          position: relative;
          font-size: 3.5rem;
          top: 80px;
        }
      }


    }

  .header-wrapper{
      width: max-content;
    }
  }

  @media (min-width: 1800px) {
  .s2 .content {
    gap: 5rem;
  }
}

</style>

<section class="section s2">
  <BackgroundWaves color="#dfdd19"/>
  <div class="content">
    <div class="wrapper ilustracion">
        <a href="/ilustracion" class="project-link">
      
      <div class="header-wrapper">
        <h3>Ilustración digital</h3>
      </div>
    </div>
        </a>

    <div class="wrapper ia">
     
      <div class="header-wrapper">
        <h3>IA</h3>
      </div>
    </div>

    <div class="wrapper escenografia">
  
      <div class="header-wrapper">
        <h3>Escenografía</h3>
      </div>
    </div>
  </div>
    <Scrolling direction="right" />

</section>
