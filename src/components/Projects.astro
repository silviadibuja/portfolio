<style>
  .s2 .content {
    display: flex;
    flex-direction: column; /* Mobile first: columna */
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    overflow-y: auto;
    gap: 1rem;
  }

  .wrapper {
    width: 280px;
    height: 180px;
    position: relative;
    display: flex;
    flex-direction: column;
    transition: all 200ms ease-in-out;

    .image-wrapper {
      width: 100%;
      height: 100%;
      overflow: hidden;
      border-radius: 5px;
      cursor: pointer;
      transition: all 200ms ease-in-out;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: all 200ms ease-in-out;
      }

      .book-design-image {
        object-position: center;
      }
    }

    .header-wrapper {
      display: flex;
      flex-direction: column;
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      justify-content: center;
      align-items: center;
      transition: all 200ms ease-in-out;

      h3 {
        color: #fff;
        font-size: 1.5rem;
        font-family: Oswald, sans-serif;
        text-transform: uppercase;
        margin: 0.5rem 0;
        transition: all 200ms ease-in-out;
      }
    }
  }

  @media (min-width: 768px) {
    .s2 .content {
      justify-content: center;
      overflow: hidden;
      padding: 2rem 0;
      padding-inline: calc(2rem + 50px);
      max-width: 1920px;
    }

    .wrapper {
      width: 600px;
      height: 180px;

      .image-wrapper {
        width: 450px;
        height: 180px;

        img {
          width: 450px;
          height: 180px;
        }
      }

      .header-wrapper {
        overflow: hidden;
        h3 {
          position: relative;
          font-size: 3.5rem;
          top: 80px;
        }
      }

      &:hover img {
        transform: scale(2);
      }

      &:hover h3 {
        top: -80px;
        transform: scale(.5);
        left: 150px;
      }

      &:hover .image-wrapper {
        width: 600px;
      }
      &.ilustracion {
        align-self: flex-start;
      }

      &.escenografia {
        align-self: flex-end;
      }
    }

    .ilustracion .header-wrapper{
      width: max-content;
      left: 100px;
    }
  }
</style>

<section class="section s2">
  <div class="content">
    <div class="wrapper ilustracion">
      <div class="image-wrapper">
        <img
          src="https://images.unsplash.com/photo-1579783902614-a3fb3927b6a5?auto=format&fit=crop&w=1583&q=80"
        />
      </div>
      <div class="header-wrapper">
        <h3>Ilustración digital</h3>
        <a href="/ilustracion" class="project-link">
          <h3>Ver proyecto</h3>
        </a>
      </div>
    </div>

    <div class="wrapper ia">
      <div class="image-wrapper">
        <img
          class="book-design-image"
          src="https://images.unsplash.com/photo-1561214115-f2f134cc4912?auto=format&fit=crop&w=1306&q=80"
        />
      </div>
      <div class="header-wrapper">
        <h3>IA</h3>
        <h3>Ver proyecto</h3>
      </div>
    </div>

    <div class="wrapper escenografia">
      <div class="image-wrapper">
        <img
          class="book-design-image"
          src="https://images.unsplash.com/photo-1561214115-f2f134cc4912?auto=format&fit=crop&w=1306&q=80"
        />
      </div>
      <div class="header-wrapper">
        <h3>Escenografía</h3>
        <h3>Ver proyecto</h3>
      </div>
    </div>
  </div>
</section>
