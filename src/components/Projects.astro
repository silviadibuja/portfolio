---
import Scrolling from "@/components/Scrolling.astro";
import BackgroundWaves from "./BackgroundWaves.astro";
---

<style>
  .s2 .content {
    display: flex;
    flex-direction: column; /* Mobile first: columna */
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    overflow-y: auto;
    /* gap: clamp(1rem, 2vw, 3rem); */
    gap: 1rem;
    z-index: 20;
  }

  .wrapper {
    width: 280px;
    height: 180px;
    position: relative;
    display: flex;
    flex-direction: column;
    transition: all 200ms ease-in-out;
    border-radius: 5px;
    box-shadow:
      5px 5px 30px 7px rgba(0, 0, 0, 0.25),
      -5px -5px 30px 7px rgba(0, 0, 0, 0.22);
    cursor: pointer;

    .image-wrapper {
      width: 100%;
      height: 100%;
      overflow: hidden;
      border-radius: 5px;
      cursor: none;
      transition: all 200ms ease-in-out;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: all 200ms ease-in-out;
      }

      .book-design-image {
        object-position: center;
      }
    }

    .header-wrapper {
      display: flex;
      flex-direction: column;
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      justify-content: center;
      align-items: center;
      transition: all 200ms ease-in-out;
      background-color: var(--color-secondary);

      h3 {
        color: #fff;
        font-size: 1.5rem;
        font-family: Oswald, sans-serif;
        text-transform: uppercase;
        margin: 0.5rem 0;
        transition: all 200ms ease-in-out;
      }
    }
  }

  .wrapper:hover {
    transform: scale(0.9, 0.9);
    box-shadow:
      5px 5px 30px 15px rgba(0, 0, 0, 0.25),
      -5px -5px 30px 15px rgba(0, 0, 0, 0.22);
  }

  @media (min-width: 768px) {
    .s2 .content {
      justify-content: center;
      overflow: hidden;
      gap: calc(1rem + 1vw);
      flex-direction: row; /* Mobile first: columna */
    }

    .wrapper {
      width: 350px;
      height: 350px;

      .image-wrapper {
        width: 450px;
        height: 180px;

        img {
          width: 450px;
          height: 180px;
        }
      }

      .header-wrapper {
        overflow: hidden;
        h3 {
          position: relative;
          font-size: 2.7rem;
          top: 80px;
        }
      }
    }

    .header-wrapper {
      width: max-content;
    }
  }

  @media (min-width: 1800px) {
    .s2 .content {
      gap: 2rem;
    }
  }
</style>

<section class="section s2">
  <BackgroundWaves color="#dfdd19" />
  <div class="content">
    <a href="/ilustracion" class="wrapper ilustracion">
      <div class="header-wrapper">
        <h3>Ilustración digital</h3>
      </div>
    </a>

    <a class="wrapper ia">
      <div class="header-wrapper">
        <h3>IA</h3>
      </div>
    </a>

    <a class="wrapper escenografia">
      <div class="header-wrapper">
        <h3>Escenografía</h3>
      </div>
    </a>
  </div>
  <Scrolling direction="right" />
</section>
